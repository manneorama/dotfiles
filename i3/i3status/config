# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#9ECE9E"
        color_degraded = "#F0DFAF"
        color_bad = "#E89393"
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = " %quality (%ip)"
        format_down = " down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = " down"
}

battery all {
        format = "%status %percentage"
        status_chr = " "
        status_bat = " "
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = " %avail"
}

disk "/home" {
        format = " %avail"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
}
